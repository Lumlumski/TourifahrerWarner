<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.lumlumsoftware.tourifahrerwarner">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="de.lumlumsoftware.tourifahrerwarner.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.lumlumsoftware.tourifahrerwarner.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name="de.lumlumsoftware.tourifahrerwarner.LiveModeActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_live_mode"
            android:parentActivityName="de.lumlumsoftware.tourifahrerwarner.MainActivity"
            android:theme="@style/FullscreenTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.lumlumsoftware.tourifahrerwarner.MainActivity" />
        </activity>
    </application>

</manifest>